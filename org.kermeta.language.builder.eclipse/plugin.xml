<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="KermetaBuilder"
         name="Kermeta Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.kermeta.language.builder.eclipse.KermetaBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="KermetaNature"
         name="Kermeta Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.kermeta.language.builder.eclipse.KermetaNature">
         </run>
      </runtime>
      <builder
            id="org.kermeta.language.builder.eclipse.KermetaBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            nameFilter="*"
            id="org.kermeta.language.builder.eclipse.contribution1">
         <action
               label="Add/Remove Kermeta Nature"
               class="org.kermeta.language.builder.eclipse.ToggleNatureAction"
               menubarPath="org.eclipse.ui.projectConfigure/additions"
               enablesFor="+"
               id="org.kermeta.language.builder.eclipse.addRemoveNatureAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         id="xmlProblem"
         name="XML Problem"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>

</plugin>
