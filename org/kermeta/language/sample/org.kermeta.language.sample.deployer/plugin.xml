<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>



	<extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.kermeta.language.samples.category"
            name="Kermeta 2 samples"
            parentCategory="org.eclipse.ui.Examples"/>
      <wizard
            canFinishEarly="true"
            category="org.eclipse.ui.Examples/org.kermeta.language.samples.category"
            class="org.kermeta.language.sample.deployer.wizards.Class2RdbmsExampleWizard"
            finalPerspective="org.kermeta.language.texteditor.eclipse.nature.internal.KermetaPerspectiveID"
            hasPages="false"
            icon="icons/newkermetafile.png"
            id="org.kermeta.language.samples.wizard"
            name="Kermeta 2 Class2Rdbms Example"
            preferredPerspectives="org.eclipse.ui.resourcePerspective">
         <description>
            Creates a project that features a simple model transformation from Class metamodel to database metamodel. This transformation embeds its own version of the metamodels (ie. doesn't rely on an external model projects).
         </description>
      </wizard>
      <wizard
            canFinishEarly="true"
            category="org.eclipse.ui.Examples/org.kermeta.language.samples.category"
            class="org.kermeta.language.sample.deployer.wizards.LogoExampleWizard"
            finalPerspective="org.kermeta.language.texteditor.eclipse.nature.internal.KermetaPerspectiveID"
            hasPages="false"
            icon="icons/newkermetafile.png"
            id="org.kermeta.language.samples.wizard"
            name="Kermeta 2 Logo Example"
            preferredPerspectives="org.eclipse.ui.resourcePerspective">
         <description>
            Creates the projects for a DSL of Logo language (model, various tool written in kermeta)
         </description>
      </wizard>
      <wizard
            canFinishEarly="true"
            category="org.eclipse.ui.Examples/org.kermeta.language.samples.category"
            class="org.kermeta.language.sample.deployer.wizards.FsmExampleWizard"
            finalPerspective="org.kermeta.language.texteditor.eclipse.nature.internal.KermetaPerspectiveID"
            hasPages="false"
            icon="icons/newkermetafile.png"
            id="org.kermeta.language.samples.wizard"
            name="Kermeta 2 FSM Example"
            preferredPerspectives="org.eclipse.ui.resourcePerspective">
         <description>
            Creates theprojects for a DSL of Finite State Machine language (FSM)(model, various tool written in kermeta)
         </description>
      </wizard>
   </extension>
 
</plugin>
