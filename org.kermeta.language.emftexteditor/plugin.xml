<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.kermeta.language.emftexteditor.mopp.KermetaMetaInformation" id="org.kermeta.language.emftexteditor.mopp.KermetaMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension id="org.kermeta.language.emftexteditor.nature" name="kermeta nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.kermeta.language.emftexteditor.mopp.KermetaNature" />
		</runtime>
		<builder id="org.kermeta.language.emftexteditor.builder" />
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.kermeta.language.emftexteditor.builder" name="kermeta Builder">
		<builder hasNature="true">
			<run class="org.kermeta.language.emftexteditor.mopp.KermetaBuilderAdapter" />
		</builder>
	</extension>
	
	<extension-point id="org.kermeta.language.emftexteditor.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.kermeta.language.emftexteditor.mopp.KermetaResourceFactoryDelegator" type="kermeta">
		</parser>
	</extension>
	
	<extension-point id="org.kermeta.language.emftexteditor.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd"/>
	
</plugin>
