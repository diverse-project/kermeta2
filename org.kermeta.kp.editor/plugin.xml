<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
	<extension point="org.emftext.access.syntax">
		<metaInformationProvider class="org.kermeta.kp.editor.mopp.KptMetaInformation" id="org.kermeta.kp.editor.mopp.KptMetaInformation">
		</metaInformationProvider>
	</extension>
	
	<extension point="org.eclipse.ui.editors">
		<editor class="org.kermeta.kp.editor.ui.KptEditor" contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor" extensions="kpt" icon="icons/editor_icon.gif" id="org.kermeta.kp.editor.ui.KptEditor" name="EMFText kpt Editor">
		</editor>
	</extension>
	
	<extension point="org.eclipse.core.runtime.preferences">
		<initializer class="org.kermeta.kp.editor.ui.KptPreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.ui.preferencePages">
		<page name="Kpt Text Editor" id="org.kermeta.kp.editor.ui.KptPreferencePage" class="org.kermeta.kp.editor.ui.KptPreferencePage" category="org.eclipse.ui.preferencePages.GeneralTextEditor">
		</page>
		<page name="Syntax Coloring" id="org.kermeta.kp.editor.ui.KptSyntaxColoringPreferencePage" class="org.kermeta.kp.editor.ui.KptSyntaxColoringPreferencePage" category="org.kermeta.kp.editor.ui.KptPreferencePage">
		</page>
		<page name="Brackets" id="org.kermeta.kp.editor.ui.KptBracketPreferencePage" class="org.kermeta.kp.editor.ui.KptBracketPreferencePage" category="org.kermeta.kp.editor.ui.KptPreferencePage">
		</page>
		<page name="Occurrence" id="org.kermeta.kp.editor.ui.KptOccurrencePreferencePage" class="org.kermeta.kp.editor.ui.KptOccurrencePreferencePage" category="org.kermeta.kp.editor.ui.KptPreferencePage">
		</page>
	</extension>
	
	<extension point="org.eclipse.ui.newWizards">
		<category id="org.emftext.runtime.ui.EMFTextFileCategory" name="EMFText File">
		</category>
		<wizard category="org.emftext.runtime.ui.EMFTextFileCategory" icon="/icons/default_new_icon.gif" class="org.kermeta.kp.editor.ui.KptNewFileWizard" id="org.kermeta.kp.editor.ui.KptNewFileWizard" name="EMFText .kpt file">
		</wizard>
	</extension>
	
	<extension id="org.kermeta.kp.editor.problem" name="EMFText Problem" point="org.eclipse.core.resources.markers">
		<persistent value="true">
		</persistent>
		<super type="org.eclipse.core.resources.problemmarker">
		</super>
		<super type="org.eclipse.core.resources.textmarker">
		</super>
	</extension>
	
	<extension id="org.kermeta.kp.editor.nature" name="kpt nature" point="org.eclipse.core.resources.natures">
		<runtime>
			<run class="org.kermeta.kp.editor.mopp.KptNature" />
		</runtime>
		<builder id="org.kermeta.kp.editor.builder" />
	</extension>
	
	<extension point="org.eclipse.core.resources.builders" id="org.kermeta.kp.editor.builder" name="kpt Builder">
		<builder hasNature="true">
			<run class="org.kermeta.kp.editor.mopp.KptBuilderAdapter" />
		</builder>
	</extension>
	
	<extension-point id="org.kermeta.kp.editor.default_load_options" name="Default Load Options" schema="schema/default_load_options.exsd"/>
	
	<extension point="org.eclipse.emf.ecore.extension_parser">
		<parser class="org.kermeta.kp.editor.mopp.KptResourceFactoryDelegator" type="kpt">
		</parser>
	</extension>
	
	<extension-point id="org.kermeta.kp.editor.additional_extension_parser" name="Additional Extension Parser" schema="schema/additional_extension_parser.exsd"/>
	
</plugin>
